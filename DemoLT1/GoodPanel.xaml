<UserControl x:Class="DemoLT1.GoodPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DemoLT1"
             mc:Ignorable="d" FontFamily="Times New Roman"
             d:DesignHeight="200" d:DesignWidth="800" Background="{DynamicResource Second}">
    <Border BorderThickness="2" BorderBrush="Black">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="13*"/>
            </Grid.ColumnDefinitions>
            <Border Margin="10,10,5,10" Grid.Column="0" BorderBrush="Black" BorderThickness="3">
                <Image x:Name="ImageBox" Source="/Resources/picture.png"/>
            </Border>
            <Border Margin="5,10,5,10" Grid.Column="1" BorderBrush="Black" BorderThickness="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label x:Name="CategoryName" Grid.Row="0" Content="Label" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" FontWeight="Bold"/>
                    <Label x:Name="Description" Grid.Row="1" Content="Label" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    <Label x:Name="Fabric" Grid.Row="2" Content="Label" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    <Label x:Name="Supplier" Grid.Row="3" Content="Label" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    <Label x:Name="Price" Grid.Row="4" Content="Цена:" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    <Label x:Name="UnitOfMeasure" Grid.Row="5" Content="Label" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    <Label x:Name="Count" Grid.Row="6" Content="Label" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="OldPrice" HorizontalAlignment="Left" Margin="49,0,0,0" Grid.Row="4" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center"/>
                    <TextBlock x:Name="NewPrice" HorizontalAlignment="Left" Margin="99,0,0,0" Grid.Row="4" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center"/>
                </Grid>
            </Border>
            <Border x:Name="DiscountBorder" Margin="5,10,10,10" Grid.Column="2" BorderBrush="Black" BorderThickness="3">
                <Label x:Name="DiscountBox" Content="Label" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30px"/>
            </Border>
        </Grid>
    </Border>

</UserControl>
