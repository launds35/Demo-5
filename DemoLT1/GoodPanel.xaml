<UserControl x:Class="DemoLT1.GoodPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DemoLT1"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800" Background="{DynamicResource Second}">
    <Border BorderThickness="2" BorderBrush="Black">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="13*"/>
            </Grid.ColumnDefinitions>
            <Border Margin="10,10,5,10" Grid.Column="0" BorderBrush="Black" BorderThickness="3"></Border>
            <Border Margin="5,10,5,10" Grid.Column="1" BorderBrush="Black" BorderThickness="2"></Border>
            <Border Margin="5,10,10,10" Grid.Column="2" BorderBrush="Black" BorderThickness="3"></Border>
        </Grid>
    </Border>
    
</UserControl>
