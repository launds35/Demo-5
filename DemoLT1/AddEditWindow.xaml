<Window x:Class="DemoLT1.AddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoLT1"
        mc:Ignorable="d" FontFamily="Times New Roman"
        Title="AddEditWindow" Height="450" Width="627" Icon="/Resources/Icon.png">
    <Grid x:Name="UnitOfMeasureBox">
        <Label Content="Артикуль" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ArticleBox" HorizontalAlignment="Left" Margin="10,34,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Название&#x9; товара" HorizontalAlignment="Left" Margin="146,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="LabelBox" HorizontalAlignment="Left" Margin="146,34,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Единица измерения" HorizontalAlignment="Left" Margin="280,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UnitOfMeasureBox1" HorizontalAlignment="Left" Margin="280,34,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Поставщик" HorizontalAlignment="Left" Margin="10,66,0,0" VerticalAlignment="Top"/>
        <Label Content="Производитель" HorizontalAlignment="Left" Margin="146,66,0,0" VerticalAlignment="Top"/>
        <Label Content="Категория товара" HorizontalAlignment="Left" Margin="280,66,0,0" VerticalAlignment="Top"/>
        <Label Content="Описание" HorizontalAlignment="Left" Margin="420,66,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="DescriptionBox" HorizontalAlignment="Left" Margin="420,90,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="177" Height="37"/>
        <Label Content="Цена" HorizontalAlignment="Left" Margin="420,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PriceBox" HorizontalAlignment="Left" Margin="420,34,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" PreviewTextInput="PriceBox_PreviewTextInput"/>
        <Label Content="Скидка" HorizontalAlignment="Left" Margin="10,135,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="DiscountBox" HorizontalAlignment="Left" Margin="10,159,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" PreviewTextInput="DiscountBox_PreviewTextInput"/>
        <Label Content="Количество на складе" HorizontalAlignment="Left" Margin="146,135,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="CountBox" HorizontalAlignment="Left" Margin="146,159,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" PreviewTextInput="CountBox_PreviewTextInput"/>
        <ComboBox x:Name="SupplierBox" HorizontalAlignment="Left" Margin="10,95,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="FabricBox" HorizontalAlignment="Left" Margin="147,95,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="CategoryBox" HorizontalAlignment="Left" Margin="280,95,0,0" VerticalAlignment="Top" Width="120"/>
        <Image x:Name="ImageBox" HorizontalAlignment="Left" Height="100" Margin="10,234,0,0" VerticalAlignment="Top" Width="168" Source="/Resources/picture.png"/>
        <Button  Content="Выбрать файл" HorizontalAlignment="Left" Margin="10,362,0,0" VerticalAlignment="Top" Width="127" Click="Button_Click" Background="{DynamicResource Accent}"/>
        <Button x:Name="DeleteButton"  Content="Удалить" HorizontalAlignment="Center" Margin="0,362,0,0" VerticalAlignment="Top" Width="126" Background="{DynamicResource Accent}" Click="DeleteButton_Click"/>
        <Button x:Name="AddEditButton"  Content="Добавить" HorizontalAlignment="Left" Margin="480,362,0,0" VerticalAlignment="Top" Width="128" Background="{DynamicResource Accent}" Click="AddEditButton_Click"/>
        <Label x:Name="IdLabel" Content="Label" HorizontalAlignment="Left" Margin="480,333,0,0" VerticalAlignment="Top" Width="117"/>

    </Grid>
</Window>
