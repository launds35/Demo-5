<Window x:Class="DemoLT1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoLT1"
        mc:Ignorable="d" FontFamily="Times New Roman" FontSize="18px"
        Title="Главное окно " Height="550" Width="930" Icon="/Resources/Icon.png">
    <Grid>
        <Button x:Name="BackButton" Content="Выйти" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="36" Width="86" Click="BackButton_Click" Background="{DynamicResource Accent}"/>
        <Button x:Name="AddButton" Content="Добавить" HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top" Height="36" Width="86" Click="AddButton_Click" Background="{DynamicResource Accent}"/>
        <Label x:Name="FullNameLabel" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0"/>
        <ScrollViewer Margin="120,65,0,0">
            <StackPanel x:Name="GoodsPanel" />
        </ScrollViewer>
        <TextBox x:Name="SearchBox" HorizontalAlignment="Left" Margin="120,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="153" TextChanged="SearchBox_TextChanged"/>
        <ComboBox x:Name="SortBox" HorizontalAlignment="Left" Margin="311,10,0,0" VerticalAlignment="Top" Width="154" SelectionChanged="SortBox_SelectionChanged">
            <ComboBoxItem IsSelected="True" Content="Без сортировки"></ComboBoxItem>
            <ComboBoxItem Content="По возрастанию"></ComboBoxItem>
            <ComboBoxItem Content="По убыванию"></ComboBoxItem>
        </ComboBox>
        <ComboBox x:Name="FilterBox" HorizontalAlignment="Left" Margin="501,10,0,0" VerticalAlignment="Top" Width="150" SelectionChanged="FilterBox_SelectionChanged"/>

    </Grid>
</Window>
